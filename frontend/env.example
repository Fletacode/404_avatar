# LiveKit 설정
NEXT_PUBLIC_LIVEKIT_URL=your_livekit_server_url
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# AI 서비스
OPENAI_API_KEY=your_openai_api_key
HEDRA_API_KEY=your_hedra_api_key

# 백엔드 API URL (중요!)
# NestJS 백엔드가 실행되는 URL을 설정하세요
NEXT_PUBLIC_API_URL=http://localhost:3001

# LiveKit 연결 세부사항 엔드포인트
NEXT_PUBLIC_CONN_DETAILS_ENDPOINT=/api/connection-details

# ===========================================
# 설정 방법:
# 1. 이 파일을 .env.local로 복사하세요
# 2. NEXT_PUBLIC_API_URL을 백엔드 서버 URL로 설정하세요
# 3. 백엔드가 실행 중인지 확인하세요 (npm run start-backend)
# ===========================================
